<% layout('layouts/mainpage') %>

    <h3><a class="btn btn-success" href="/admins">Create New</a>
        <p style="color:rgb(224, 224, 233)">Employees List</p>
    </h3>

    <table class="table table-striped" style="background-color: #fafcfd;">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th>Eid</th>
                <th>Manage Employee</th>
                <th>View Attendence</th>
            </tr>
        </thead>
        <tbody>
            <% for(let user of users){ %>
                <tr>
                    <td>
                        <%=user.username%>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%=user.contactNumber%>
                    </td>
                    <td>
                        <%=user.eid%>
                    </td>

                    <td>
                        <a class="btn btn-primary btn-sm" href="/admins/<%=user._id%>" class="card-link">Edit</a>
                        <%if(user.designation!=="Admin" ){%>
                            <form class="d-inline" action="/admins/<%=user._id%>?_method=DELETE" method="POST"
                                onclick=" return confirm('Are you sure you want to delete this record');"><button
                                    class="btn btn-danger btn-sm btn-inline">Delete</button></form>
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" href="/admins/<%=user._id%>/employees/<%=user._id%>"
                            class="card-link">Attendence</a>
                    </td>


                    <%}%>

                </tr>

                <%}%>
        </tbody>
        </thead>
    </table>

    <h4><a class="btn btn-danger" href="/employees/<%=currentUser._id%>">Main Page</a></h4>